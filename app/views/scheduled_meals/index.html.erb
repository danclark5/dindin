<p id="notice"><%= notice %></p>

<h1>Scheduled Meals</h1>

<table>
  <thead>
    <tr>
      <th>Meal</th>
      <th>Date</th>
      <th>Meal type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scheduled_meals.each do |scheduled_meal| %>
      <tr>
        <td><%= scheduled_meal.meal %></td>
        <td><%= scheduled_meal.date %></td>
        <td><%= scheduled_meal.meal_type %></td>
        <td><%= link_to 'Show', scheduled_meal %></td>
        <td><%= link_to 'Edit', edit_scheduled_meal_path(scheduled_meal) %></td>
        <td><%= link_to 'Destroy', scheduled_meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

