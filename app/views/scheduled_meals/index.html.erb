<p id="notice"><%= notice %></p>

<h1>Scheduled Meals</h1>
<p>
  <strong>Start:</strong>
  <%= @scheduled_meals.first.schedule_date.strftime('%F')%>
  <strong>End:</strong>
  <%= @scheduled_meals.last.schedule_date.strftime('%F')%>
</p>



<table>
  <thead>
    <tr>
      <th> Date </th>
      <th> Day </th>
      <th> Dinner </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scheduled_meals.each do |scheduled_meal| %>
      <tr>
        <td><%= scheduled_meal.schedule_date.strftime('%F') %></td>
        <td><%= scheduled_meal.schedule_date.strftime('%A') %></td>
        <td><%= link_to_add_or_edit_meal scheduled_meal %></td>
        <% if scheduled_meal.id %>
          <td><%= link_to 'Destroy', scheduled_meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
