<% provide :title, "Scheduled Meals" %>
<h2 class="subtitle is-2">Scheduled Meals</h2>

<table>
  <thead>
    <tr>
      <th> Day </th>
      <th> Dinner </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scheduled_meals.each do |scheduled_meal| %>
      <tr>
        <td><%= scheduled_meal.schedule_date.strftime("%A the #{scheduled_meal.schedule_date.day.ordinalize}") %></td>
        <td data-turbolinks="false"><%= link_to_add_or_edit_meal scheduled_meal %></td>
        <% if scheduled_meal.id %>
          <td><%= link_to 'Remove', scheduled_meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
