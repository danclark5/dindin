<% provide :title, "Home" %>

<div class=box>
<h5 class="title is-5"> For Today </h5>
<% if @upcoming_meals[0].meal_id %>
  <%= @upcoming_meals[0].meal_name %> </br></br>
<% else %>
  Nothing is planned for today.</br></br>
  How about <%= @suggested_meals[0].name %>
<%= form_with model: @scheduled_meal, url: attach_suggested_meal_scheduled_meals_path do |form| %>
  <%= form.hidden_field(:date, value: Date.today) %>
  <%= form.hidden_field(:meal_id, value: @suggested_meals[0].id) %>
  <%= form.submit "Add" %>
<% end %>
<% end %>
</div>

