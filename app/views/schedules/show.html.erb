<p id="notice"><%= notice %></p>

<p>
  <strong>Start:</strong>
  <%= @schedule.start_date.strftime('%c')%>
  <strong>End:</strong>
  <%= @schedule.end_date.strftime('%C')%>
</p>

<table>
  <tr>
    <th> Date </th>
    <th> Day </th>
    <th> Dinner </th>
  </tr>
  <% @schedule.included_dates.each do |included_date| %>
    <tr>
      <td> <%= included_date.strftime('%c') %> </td>
      <td> <%= included_date.strftime('%A') %> </td>
      <td> <%= link_to_add_or_edit_meal @schedule, included_date %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Edit', edit_schedule_path(@schedule) %> |
<%= link_to 'Back', schedules_path %>
