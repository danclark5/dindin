<%= form_with(model: meal, local: true) do |form| %>
  <% if meal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

      <ul>
      <% meal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class: "label" %>
    <%= form.text_field :name, required: true, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :recipe_link, class: "label" %>
    <%= form.text_field :recipe_url, class: "input" %>
  </div>

  <% if current_user.user_type == 'admin' %>
    <div class="field">
      <%= form.label :global_meal, class: "checkbox" %>
      <%= form.check_box :global_meal %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit class: "button is-small is-primary" %>
  </div>
<% end %>
