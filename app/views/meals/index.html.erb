<% provide :title, "Meals" %>
<h2 class="subtitle is-2">Meals</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= link_to meal.name, meal %></td>
        <% if current_user.user_type == 'admin' || meal.user == current_user%>
          <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
        <% else %>
          <td></td>
        <% end %>
        <% if current_user.user_type == 'admin' || meal.user == current_user%>
          <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meal', new_meal_path %>
