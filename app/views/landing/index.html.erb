<% provide :title, "Home" %>

<% @meals.each do |meal| %>
  <div class=box>
    <h5 class="title is-5"> <%= "For #{meal[0].schedule_date.strftime('%A')}"%></h5>
    <% if meal[0].meal_id %>
      <%= meal[0].meal_name %> </br></br>
    <% else %>
      Nothing is planned.</br></br>
      How about <%= meal[1].name %>
      <%= form_with model: @scheduled_meal, url: attach_suggested_meal_scheduled_meals_path do |form| %>
        <%= form.hidden_field(:date, value: Date.today) %>
        <%= form.hidden_field(:meal_id, value: meal[1].id) %>
        <%= form.submit "Add", class: "button is-primary" %>
      <% end %>
    <% end %>
  </div>
<% end %>

<%= link_to "Past Meals", root_path(start_date: @past_start_date), class: "button is-link" %>
<%= link_to "Future Meals", root_path(start_date: @future_start_date), class: "button is-link" %>

