<% provide :title, "Home" %>

<% @meals.each do |meal| %>
  <div id="<%="scheduled_meal_#{meal[0].schedule_date.strftime('%F')}"%>" class=box>
    <h5 class="title is-5"> <%= "For #{meal[0].schedule_date.strftime('%A')}"%></h5>
    <% if meal[0].meal_id %>
      <%= render(ScheduledMealComponent.new(meal[0])) %>
    <% else %>
      <%= render(SuggestedMealComponent.new(meal[1],meal[0].schedule_date.strftime('%F'))) %>
    <% end %>
  </div>
<% end %>

<%= render(DateControlComponent.new(@past_start_date, @future_start_date)) %>
