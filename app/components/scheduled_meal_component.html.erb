<div id="<%="scheduled_meal_#{@scheduled_meal.date}_actual"%>">
  <div class="pb-3"><%= link_to @scheduled_meal.meal.name, @scheduled_meal.meal %> </div>
  <% if @scheduled_meal.meal.recipe_url %>
    <div class="pb-3"> <%= link_to "View Recipe", @scheduled_meal.meal.recipe_url %> </div>
  <% end %>
  <div>
    <%= link_to('Change', edit_scheduled_meal_path(@scheduled_meal.id), class: "button is-primary") %>
    <a href="#" class="button is-primary" data-controller="scheduled-meals"
                                          data-confirm="Are you sure?"
                                          data-action="confirm:complete->scheduled-meals#remove_scheduled_meal"
                                          data-date="<%=@scheduled_meal.date %>"
                                          data-scheduled_meal_id="<%=@scheduled_meal.id%>"
                                          data-reflex-root="#<%="scheduled_meal_#{@scheduled_meal.date.strftime('%F')}"%>"
                                          > Drop </a>
  </div>
</div>
